<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlasticProduct"
    android:background="@drawable/plastic">
    <TextView
        android:id="@+id/product_details"
        android:layout_width="240sp"
        android:textAlignment="center"
        android:layout_height="40sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="140dp"
        android:text="Product Details"
        android:textSize="27sp"
        android:textColor="#000000"
        android:background="@drawable/button"

        />
    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/product_details"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="140dp"
        android:text="*Plastic 20 tk per KG:"
        android:textColor=" #2e86c1 "
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/enter_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/amount"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="140dp"
        android:text="Enter weight of Plastic in KG:"
        android:textColor=" #000000 "
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="17sp" />


    <EditText
        android:id="@+id/weight"
        android:layout_width="250sp"
        android:layout_height="50dp"
        android:layout_below="@id/enter_amount"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="140dp"
        android:ems="10"
        android:hint="weight in KG"
        android:background="@drawable/inputs"
        android:paddingLeft="10dp"

        android:inputType="number" />
    <Button
        android:id="@+id/submit_button"
        android:layout_below="@+id/weight"
        android:layout_width="250sp"
        android:layout_height="40sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="140dp"

        android:text="Submit"


        android:textColor="#000000"

        android:textSize="20sp"/>


    <TextView
        android:id="@+id/result"
        android:layout_width="290sp"
        android:layout_height="wrap_content"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/submit_button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:text="."
        android:textColor="#000000 "
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/inputs"
        android:hint="result"

        android:textSize="16sp" />
    <Button
        android:id="@+id/sell"
        android:layout_below="@+id/result"
        android:layout_width="250sp"
        android:layout_height="40sp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="140dp"

        android:text="Sell Product"


        android:textColor="#000000"

        android:textSize="20sp"/>



</RelativeLayout>