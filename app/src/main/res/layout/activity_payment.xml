<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pay2"
    tools:context=".PaymentActivity">

    <TextView
        android:id="@+id/delivery"
        android:layout_width="240sp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="160dp"
        android:text="Cash On Delivery"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/button"/>

    <TextView
        android:id="@+id/enter_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/delivery"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="200dp"
        android:text="Give Your Address:"
        android:textColor=" #000000 "
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="17sp" />
    <EditText
        android:id="@+id/input_address"
        android:layout_width="600sp"
        android:layout_height="50dp"
        android:layout_below="@id/enter_address"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="270dp"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="170dp"
        android:ems="10"
        android:hint="Your Address"
        android:background="@drawable/inputs"
        android:paddingLeft="10dp"

        android:inputType="textMultiLine" />
    <Button
        android:id="@+id/submit1"
        android:layout_below="@+id/input_address"
        android:layout_width="250sp"

        android:layout_height="40sp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="170dp"

        android:text="Submit"




        android:textColor="#000000"

        android:textSize="20sp"/>

    <TextView
        android:id="@+id/login_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/submit1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="130dp"
        android:text="*Our Workers will receive your products from your location and Hand Over the money"
        android:textColor="#42c5fa"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="17sp" />



</RelativeLayout>